{
  "name": "npmf",
  "description": "No problem, melon farmer.",
  "keywords": [
    "npmf"
  ],
  "version": "0.0.1",
  "main": "npmf.js",
  "bin": {
    "npmf": "npmf.js"
  },
  "homepage": "http://github.com/zerious/npmf",
  "repository": "http://github.com/zerious/npmf.git",
  "bugs": {
    "url": "http://github.com/zerious/npmf/issues"
  },
  "author": {
    "name": "Sam Eubank",
    "email": "sameubank@gmail.com"
  },
  "license": "ISC",
  "scripts": {
    "dev": "nodemon npmf -- serve --verbose",
    "test": "mocha",
    "retest": "mocha --watch",
    "cover": "istanbul cover _mocha",
    "report": "open coverage/lcov-report/index.html"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "vue"
    ],
    "extends": [
      "plugin:vue/recommended",
      "standard"
    ],
    "rules": {
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "array-bracket-spacing": [
        "error",
        "always"
      ],
      "max-len": [
        "error",
        {
          "code": 100,
          "comments": 100
        }
      ],
      "max-params": [
        "error",
        {
          "max": 3
        }
      ]
    }
  },
  "eslintIgnore": [
    "/coverage",
    "/data",
    "/dist",
    "/node_modules"
  ],
  "dependencies": {
    "ltl": "^0.3.1"
  }
}
